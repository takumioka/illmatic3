<p id="notice"><%= notice %></p>

<h1>Bulletinboards</h1>

<table>
  <thead>
    <tr>
      <th>Messagecontent</th>
      <th>Nickname</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bulletinboards.each do |bulletinboard| %>
      <tr>
        <td><%= bulletinboard.messagecontent %></td>
        <td><%= bulletinboard.nickname %></td>
        <td><%= link_to 'Show', bulletinboard %></td>
        <td><%= link_to 'Edit', edit_bulletinboard_path(bulletinboard) %></td>
        <td><%= link_to 'Destroy', bulletinboard, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Bulletinboard', new_bulletinboard_path %>
